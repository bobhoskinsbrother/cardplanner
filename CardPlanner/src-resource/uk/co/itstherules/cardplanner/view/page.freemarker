//]]>	
</script>
<link rel="shortcut icon" href="${tagBuilder.showImageUrl("favicon.png")}" type="image/x-icon" />
<link rel="apple-touch-icon" href="${tagBuilder.showImageUrl("ipad_image.png")}" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<link rel="apple-touch-startup-image" href="${tagBuilder.showImageUrl("ipad_startup.png")}" />
</head>
<body class="template">
<div id="mainarea" class="white_rounded centre">
<div id="maincontent">

<span class="page_title">
${page.title?html}
${tagBuilder.editLink("Pages", page.title?url, page.identity, tagBuilder.showImage("edit_pencil.png"), { "redirect": tagBuilder.showUrl("Pages", page.identity, page.title?url) }, {"title":"Edit Page","class":"lightwindow", "params":"lightwindow_type=external,lightwindow_width=760,lightwindow_height=540"})}
</span>
<#if page.parent.identity != nullPage.identity> 
	<div class="page_breadcrumb">
		<@breadcrumb page />
	</div>
</#if>
<div style="clear:both"></div>
<div class="page_content">
	${wikifier.manipulate(page.body)}
	<div style="clear:both"></div>
</div>
<#if (children?size > 0) >
	<div style="clear:both"></div>
	<hr/>
	<div class="page_children_links">
		<div class="page_children_links_title">
		Links
		</div>
		<#list children as child>
			<div class="page_children_link">
				 ${tagBuilder.showLink("Pages", child.title?url, child.identity, child.title?html)}
			</div>
		</#list>
	</div>
</#if>




<br clear="all"/>
</div>
<div style="clear:both;"></div>
<div id="sideBar" class="centre" style="z-index: 1001;">
	<a href="javascript:void(0);" id="sideBarTab">${tagBuilder.showImage("sidebar.png", {"alt":"Side Bar"})}</a>
	<div id="sideBarContents" style="display:none;">
		<div id="sideBarContentsInner">
		    <table border="0" cellpadding="0" cellspacing="0" style="width:272px;">
		    	<tr>
