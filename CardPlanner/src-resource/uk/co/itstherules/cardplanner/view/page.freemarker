						    ${tagBuilder.listLink("MyCards", "index.xhtml", tagBuilder.showImage("card_small.png") + " My Cards")}
						    ${tagBuilder.listLink("ArchivedCards", "list.xhtml", tagBuilder.showImage("graveyard_small.png") + " Archived Cards")}
						<hr/>
						    ${tagBuilder.listLink("People", "index.xhtml", tagBuilder.showImage("people_small.png") + " People")}
						    ${tagBuilder.listLink("Tags", "index.xhtml",  tagBuilder.showImage("tags_small.png") + " Tags")}
						<hr/>
						    ${tagBuilder.listLink("Pages", "list.xhtml",  tagBuilder.showImage("pages_small.png") + " Content")}
						    ${tagBuilder.showLink("Admin", "index.xhtml", tagBuilder.showImage("admin_small.png") + " Admin")}
						    ${tagBuilder.listLink("Logs", "index.xhtml", tagBuilder.showImage("logs_small.png") + " Logs")}
						<hr/>
                            ${tagBuilder.showLink("Logout", "index.xhtml", "0", tagBuilder.showImage("logout_small.png") + " Logout", {}, {"id":"logout"})}
				       </td>
			    </tr>
			</table>
			${modulesNav}
		    <table border="0" cellpadding="0" cellspacing="0" style="width:272px;">
			    <tr>
			        <td style="color:#FFFFFF; background-image:url('${tagBuilder.showUrl("Images", "tab.png")}'); height:23px; text-align:center; vertical-align:middle">
			        Tags
			        </td>
			    </tr>
			    <tr>
			        <td style="background-color: #EEEEEE; width:257px; padding-bottom: 10px; padding-top: 10px;" class="left">
			        <#if tags?size == 0>There are no tags defined</#if>
			        <#list tags as tag>${tagBuilder.showLink("Tags", tag.title?url, tag.identity, tag.title?html)}  </#list>
			        </td>
			    </tr>
			    <tr>
			        <td></td>
