<#macro breadcrumb currentPage>
	<#if currentPage.identity != nullPage.identity>
		<div class="page_breadcrumb_element">
			  <#if currentPage.identity != page.identity>
			  &gt; 
			  ${tagBuilder.showLink("Pages", currentPage.title?url, currentPage.identity, currentPage.title?html)}
			  <#else>
				  &gt; 
				  <span class="current_page_breadcrumb_element">
				  ${currentPage.title?html}
				  </span>
			  </#if>
		</div>
		<@breadcrumb currentPage.parent />
	</#if>
</#macro>

