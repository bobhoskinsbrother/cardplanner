package uk.co.itstherules.yawf.model;

import java.util.Comparator;


public class DateAddedComparator implements Comparator<IdentityDeleteable<?>> {

	public int compare(IdentityDeleteable<?> o1, IdentityDeleteable<?> o2) {
		if(addedNull(o1) && !addedNull(o2)) {
			return -1;
		}
		if(!addedNull(o1) && addedNull(o2)) {
			return 1;
		}
	    return o2.getAdded().compareTo(o1.getAdded());
    }
	
	private boolean addedNull(IdentityDeleteable identityDeleteable) {
		if(identityDeleteable != null && identityDeleteable.getAdded() != null) return true;
		return false;
	}
}
