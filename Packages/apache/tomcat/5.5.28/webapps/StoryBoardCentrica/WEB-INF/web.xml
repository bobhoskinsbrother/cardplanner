<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>StoryBoardCentricaApplication</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>maxUploadSize</param-name>
		<param-value>32768000</param-value>
	</context-param>
	<context-param>
		<param-name>root</param-name>
		<param-value>/StoryBoardCentrica</param-value>
	</context-param>
	<context-param>
		<param-name>applicationName</param-name>
		<param-value>StoryBoardCentrica</param-value>
	</context-param>
	<context-param>
		<param-name>resourceRoot</param-name>
		<param-value>uk.co.itstherules.storyboard.editor.view</param-value>
	</context-param>
	<context-param>
		<param-name>controllerRoot</param-name>
		<param-value>uk.co.itstherules.storyboard.editor.controller.active</param-value>
	</context-param>
	<context-param>
		<param-name>defaultHomePage</param-name>
		<param-value>/Home/Show/-1/index.xhtml</param-value>
	</context-param>
	<context-param>
		<param-name>binaryExtensions</param-name>
		<param-value>.gif,.png,.jpg,.jpeg,.zip,.ico</param-value>
	</context-param>
	<context-param>
		<param-name>objectCacheType</param-name>
		<param-value>Simple</param-value>
	</context-param>
	<context-param>
		<param-name>applicationVersion</param-name>
		<param-value>0.4.4.1</param-value>
	</context-param>
	<context-param>
		<param-name>databasePort</param-name>
		<param-value>10001</param-value>
	</context-param>
	<context-param>
		<param-name>databaseName</param-name>
		<param-value>centrica_item_editor</param-value>
	</context-param>
	<context-param>
		<param-name>databaseUsername</param-name>
		<param-value>username</param-value>
	</context-param>
	<context-param>
		<param-name>databasePassword</param-name>
		<param-value>password</param-value>
	</context-param>
	<servlet>
		<servlet-name>StoryBoardCentrica</servlet-name>
		<description>Agile Goodies</description>
		<servlet-class>uk.co.itstherules.storyboard.editor.MainServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StoryBoardCentrica</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>uk.co.itstherules.yawf.model.persistence.neodatis.NeoDatisListener</listener-class>
	</listener>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Forbidden</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>manager</role-name>
			<role-name>StoryBoardCentrica</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>StoryBoard Centrica Application</realm-name>
	</login-config>

	<security-role>
		<description>The role that is required to log in to the StoryBoard Application</description>
		<role-name>StoryBoardCentrica</role-name>
	</security-role>
	<security-role>
		<role-name>manager</role-name>
	</security-role>



